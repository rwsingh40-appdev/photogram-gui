<h1>List of photos</h1>

<form action="/create_photo/">

  <label for="image_box">Image</label>
  <input type="text" id = "image_box" name="Image" placeholder = "Enter a URL for the image...">

  <label for="caption_box">Caption</label>
  <textarea name="Caption" id="caption_box" placeholder ="Enter a caption for the photo..."></textarea>

  <label for="owner_box">Owner ID</label>
  <input type="text" id = "owner_box" name="Owner ID" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>


<hr>

<table border ="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <%@list_of_photos.each do |a_photo|%>
    <tr>
      <td>
        <img src="<%=a_photo.image%>" alt="">
      </td>
      <td><%=a_photo.caption%></td>
      <td><%=a_photo.poster.username%></td>
      <td><%=a_photo.created_at%></td>
      <td>
        <a href="/photos/<%=a_photo.id%>">Show details</a>
      </td>
    </tr>
  <%end%>
</table>
